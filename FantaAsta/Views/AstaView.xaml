<UserControl
    x:Class="FantaAsta.Views.AstaView" Name="Asta"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <UniformGrid Grid.Row="0" Columns="2" HorizontalAlignment="Center" Margin="0,0,0,5">
            <StackPanel Orientation="Horizontal">
                <Label Content="Seleziona ruolo:" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Ruoli}" SelectedItem="{Binding RuoloSelezionato}" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="75" Height="65" Margin="5,0,0,0"/>
            </StackPanel>
            <Button Content="Estrai giocatore" FontSize="30" Command="{Binding EstraiGiocatoreCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="275" Height="65" Margin="20,0,0,0"/>
        </UniformGrid>

        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" CornerRadius="3" Margin="20,5" DataContext="{Binding GiocatoreCorrente}">
            <Grid Margin="8,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.75*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.75*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" DataContext="{Binding Squadra}" BorderThickness="2" Background="{Binding Colore1}" BorderBrush="{Binding Colore2}" CornerRadius="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,5,10">
                    <TextBlock Text="{Binding Nome}" Foreground="{Binding Colore2}" FontSize="50" FontFamily="{StaticResource NunitoBold}" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
                </Border>
                <TextBlock Grid.Column="1" Text="{Binding Nome}" FontSize="50" FontFamily="{StaticResource NunitoBold}" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="{Binding Quotazione}" FontSize="50" FontFamily="{StaticResource NunitoBold}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,0,0"/>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,5">
            <Label Content="Acquistato da" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Squadre}" SelectedItem="{Binding SquadraSelezionata}" Width="200" Height="65" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10,0"/>
            <Label Content="per" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Prezzo, UpdateSourceTrigger=PropertyChanged}" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="65" Margin="10,0,0,0"/>
            <Label Content="fantamilioni" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Assegna giocatore" FontSize="30" Command="{Binding AssegnaGiocatoreCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="275" Height="65" Margin="0,5,0,0"/>
    </Grid>

</UserControl>
