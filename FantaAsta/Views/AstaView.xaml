<UserControl
    x:Class="FantaAsta.Views.AstaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.Resources>

        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="24"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <UniformGrid Grid.Row="0" Columns="2" HorizontalAlignment="Center" Margin="0,0,0,5">
            <StackPanel Orientation="Horizontal">
                <Label Content="Seleziona ruolo:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Ruoli}" SelectedItem="{Binding RuoloSelezionato}" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="50" Margin="5,0,0,0"/>
            </StackPanel>
            <Button Content="Estrai giocatore" FontSize="24" Command="{Binding EstraiGiocatoreCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="225" Height="50" Margin="20,0,0,0"/>
        </UniformGrid>

        <Border Grid.Row="1" BorderBrush="DarkGray" BorderThickness="2" CornerRadius="3" Margin="20,5" DataContext="{Binding GiocatoreCorrente}">
            <Grid Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Giocatore:" VerticalAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="1" Content="{Binding Nome}" FontSize="40" VerticalAlignment="Center" Margin="7,0,0,0"/>
                <Label Grid.Row="0" Grid.Column="2" Content="Squadra:" VerticalAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="3" Content="{Binding Squadra}" FontSize="40" VerticalAlignment="Center" Margin="7,0,0,0"/>
                <Label Grid.Row="1" Grid.Column="0" Content="Ruolo:" VerticalAlignment="Center"/>
                <Label Grid.Row="1" Grid.Column="1" Content="{Binding Ruolo}" FontSize="40" VerticalAlignment="Center" Margin="7,0,0,0"/>
                <Label Grid.Row="1" Grid.Column="2" Content="Quotazione:" VerticalAlignment="Center"/>
                <Label Grid.Row="1" Grid.Column="3" Content="{Binding Quotazione}" FontSize="40" VerticalAlignment="Center" Margin="7,0,0,0"/>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,5">
            <Label Content="Acquistato da" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Squadre}" SelectedItem="{Binding SquadraSelezionata}" Width="150" Height="50" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10,0"/>
            <Label Content="per" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Prezzo, UpdateSourceTrigger=PropertyChanged}" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="50" Margin="10,0,0,0"/>
            <Label Content="fantamilioni" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Assegna giocatore" FontSize="24" Command="{Binding AssegnaGiocatoreCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="225" Height="50" Margin="0,5,0,0"/>
    </Grid>

</UserControl>
